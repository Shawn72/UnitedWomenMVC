
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Reports</h2>
@if (ViewBag.src == null)
{
    <div class="panel panel-default">
        <div class="panel-heading">My Loans Statement</div>
        <div class="panel-body">

            @using (Html.BeginForm("GetMyLoanStatement", "Loans", FormMethod.Post))
                {
                <div class="row">
                    <div class="form-group">
                        <b><h3 class="col-md-3 control-label">Select Loan</h3></b>
                        <div class="col-md-6">
                            <select name="loanNo" class="form-control">
                                @Html.Action("DropdownLoans", "Loans")
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="submit" value="View Statement" class="btn btn-primary pull-left btn-sm" /> 
                        </div>
                    </div>
                </div>
                    
            }

        </div>
    </div>
}
<iframe id="pdfReport" width="100%" height="500" src="@ViewBag.src"></iframe>

